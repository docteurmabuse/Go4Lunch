<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrournd_image">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo_go4lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_logo_go4lunch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/go4lunch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/go4lunch"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/go4lunch_catch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_go4lunch" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/go4lunch_catch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/find_a_nice_restaurant_and_invite_your_co_workers_for_lunch"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go4lunch_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/google_signin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/fui_wrapper_padding_horiz"
        android:layout_marginEnd="@dimen/fui_wrapper_padding_horiz"
        android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
        android:text="@string/fui_sign_in_with_google"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:backgroundTint="@color/fui_bgGoogle"
        app:icon="@drawable/fui_ic_googleg_color_24dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        app:layout_constraintBottom_toTopOf="@id/facebook_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/facebook_signin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/fui_wrapper_padding_horiz"
        android:layout_marginEnd="@dimen/fui_wrapper_padding_horiz"
        android:padding="10dp"
        android:text="@string/fui_sign_in_with_facebook"
        android:textAlignment="center"
        android:textSize="12sp"
        android:typeface="normal"
        app:backgroundTint="@color/fui_bgFacebook"
        app:icon="@drawable/fui_ic_facebook_white_22dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        app:layout_constraintBottom_toTopOf="@id/twitter_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/twitter_signin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/fui_wrapper_padding_horiz"
        android:layout_marginEnd="@dimen/fui_wrapper_padding_horiz"
        android:text="@string/fui_sign_in_with_twitter"
        android:textSize="12sp"
        app:backgroundTint="@color/fui_bgTwitter"
        app:icon="@drawable/fui_ic_twitter_bird_white_24dp"
        app:layout_constraintBottom_toTopOf="@id/email_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_signin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/fui_wrapper_padding_horiz"
        android:layout_marginEnd="@dimen/fui_wrapper_padding_horiz"
        android:layout_marginBottom="20dp"
        android:drawableStart="@android:drawable/ic_dialog_email"
        android:lineSpacingExtra="8sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/fui_sign_in_with_email"
        android:textAlignment="center"
        android:textSize="12sp"
        android:typeface="normal"
        app:backgroundTint="@color/fui_bgEmail"
        app:icon="@drawable/ic_baseline_email_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
