<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.tizzone.go4lunch.ui.map.MapFragment"
        android:label="@string/title_map_view"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.tizzone.go4lunch.ui.dashboard.DashboardFragment"
        android:label="@string/title_list_view"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.tizzone.go4lunch.ui.notifications.NotificationsFragment"
        android:label="@string/title_workmates"
        tools:layout="@layout/fragment_notifications" />
</navigation>